#Called by user from terminal or via launcher (/usr/bin/boot-repair-pkexec)
for z in boot-info boot-repair os-uninstaller;do
	[[ "$(ps -e | grep ${z}-bin )" ]] && echo "The process $z is already running. Please close it before running boot-info." && exit
done
/usr/sbin/boot-repair-bin $*
exit
