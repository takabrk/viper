Config { font = "-*-Fixed-Bold-R-Normal-*-15-*-*-*-*-*-*-*"
       , bgColor = "#ffffff"
       , fgColor = "#898989"
       , position = BottomW L 100
       , lowerOnStart = True
       , hideOnStart = False
       , commands = [ Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Wireless "wlan0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Battery [] 600
                    , Run Com "lsb_release" ["-s","-d"] "" 36000
                    , Run Date "<fc=#898989>%F (%a) %T</fc>" "date" 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "<fc=#898989>Valkyrie SRX</fc> %cpu% | %memory% | %date%"
       }
